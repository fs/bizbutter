<div id="navigation">
		<ul>
		    <li><a href="#">All Deals</a></li>
		    <li><a href="#">Latest Deals</a></li>
		    <li><a href="#">Most Commented</a></li>
		    <li class="current">Dashboard</li>
		</ul>
</div>
<div id="content">
    <div class="form">
                <% @deals.each do |deal| %>
                  <h2><%= link_to deal.title, deal_path(deal) %></h2>
                  <%= time_ago_in_words deal.updated_at %>
                  <%= link_to 'Edit', edit_deal_path(deal) if current_user && current_user.id = deal.user_id %>
                <% end %>
                
                <br/><br/>
                
                <div>
                
                <% if current_user %>
                  <%= link_to 'Create a new deal', new_deal_path %>
                <% end %>
                
                </div>
    </div>
</div>
