<h1><%= @deal.title %></h1>
<%= @deal.content %>
<br/>
<br/>

<%= @deal.published ? 'Published' : 'Not published' %>

<br/>

Updated <%= time_ago_in_words @deal.updated_at %> ago<br/>

<h2>Measures</h2>
<!-- list of measures -->
<div></div>

<% unless @deal.comments.empty? %>

<h2>Comments</h2>
<div>
  <% @deal.comments.each do |comment| %>
  <div>
    <%= comment.content %><br />
    <%= comment.created_at %><br />
    <%= comment.user.email if comment.user %><br />
  </div>
  <% end %>
</div>

<% end %>

<% if current_user %>

  <% form_for [@deal, @comment]  do |f| %>
    <%= f.text_area :content %>
    <%= f.submit 'Post comment' %>
  <% end %>

<% end %>
