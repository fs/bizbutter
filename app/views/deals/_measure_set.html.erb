<div class="measure_set"  style="background:#888; padding:1em; margin-bottom:1em; ">
  <%= f.text_field :title %>
  <%= f.check_box :published %>
  <%= f.label :published, "published set", :style => "display:inline" %>
  | <%= f.remove_link "remove set" %>

  <div id="<%= dom_id(measure_set) %>">
    <%= f.render_associated_form(measure_set.measures) %>
  </div>
  <p><%= f.add_associated_link "Add New Measure", measure_set.measures.build, :container => dom_id(measure_set) %></p>
</div>
