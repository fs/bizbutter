<% form_for @deal, :url => save_deal_path(@deal), :html => { :method => :post } do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  
  <div>
    <%= f.label :published %>
    <%= f.check_box :published %>
  </div>
  
  <%= f.submit :save %>
  
<% end %>
